.contrainer .list {
  margin-top: 20rpx;
}
.contrainer .list .list-item {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  width: 100%;
  height: 450rpx;
  background-color: #fff;
}
.contrainer .list .list-item .list-left {
  width: 280rpx;
  height: 100%;
  display: flex;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
}
.contrainer .list .list-item .list-left image {
  width: 250rpx;
  height: 370rpx;
  border-radius: 20rpx;
}
.contrainer .list .list-item .list-right {
  display: flex;
  flex-direction: column;
}
.contrainer .list .list-item .list-right .hot {
  margin-top: 20rpx;
}
.contrainer .list .list-item .list-right .way {
  width: 100%;
  max-height: 100rpx;
  overflow: hidden;
  font-weight: 500;
  font-size: 35rpx;
  margin-top: 20rpx;
}
.contrainer .list .list-item .list-right .youlun {
  color: grey;
  font-size: 28rpx;
}
.contrainer .list .list-item .list-right .price {
  color: red;
  font-size: 40rpx;
  margin-top: 20rpx;
}
.contrainer .list .list-item .list-right .desc {
  color: grey;
  margin-top: 20rpx;
  font-size: 24rpx;
}
.contrainer .list .list-item .list-right .tags {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}
.contrainer .list .list-item .list-right .tags van-tag {
  margin-left: 20rpx;
}
.contrainer .list .list-item .list-right .tags van-tag:first-child {
  margin-left: 0;
}
